<div class="container-fluid">
  <table id="customers_datatable" class="display" style="width:100%;">
    <thead>
      <tr>
        <th>Email</th>
        <th>Name</th>
        <th>Address</th>
        <th>Pincode</th>
        <th>Mobile Number</th>
        <th>Remarks</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr> 
          <td><%= customer.email %></td>
          <td><%= customer.name %></td>
          <td><%= customer.address %></td>
          <td><%= customer.pincode %></td>
          <td><%= customer.mobile %></td>
          <td>
            <% if customer.remarks.present? %>
              <%= customer.remarks %>
            <% end %> 
          </td>
          <td><a href="/customer/<%=customer.id %>/edit"><span class="glyphicon glyphicon-edit"></span></td>
        </tr>
      <% end %>
    </tbody> 
  </table>
</div>
<script type="text/javascript">

  $(document).ready(function() 
  {
    $('#customers_datatable').DataTable({
      responsive: true
    });
  });
</script>