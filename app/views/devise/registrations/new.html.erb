<center>
  <div class="card bg-light mb-3 register_card">
    <div class="card-header"><h2>Sign up</h2></div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <fieldset> 
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Enter email"%>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Choose Password" %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Re-type Password" %>
          </div><br>

         
          <button type="submit" class="btn btn-danger medium-button">Register</button><br>
          <%= render "devise/shared/links" %>
        </fieldset>
      <%end%>
    </div>
  </div>
</center>